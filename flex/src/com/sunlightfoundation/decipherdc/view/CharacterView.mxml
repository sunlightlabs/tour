<?xml version="1.0" encoding="utf-8"?>
<components:ChromelessView xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:components="com.sunlightfoundation.decipherdc.view.components.*"
		actionBarVisible="false" tabBarVisible="false" title="CharacterView" data="{data}"
		left="0" top="0" right="0" bottom="0"
	>
	<fx:Script>
		<![CDATA[

		]]>
	</fx:Script>
	<s:BitmapImage id="image" left="10" top="10" width="160" height="168" source="{data.image}"/>
	<s:Label id="characterName" left="10" top="195" height="32" text="{data.name}"
			 verticalAlign="bottom"/>
	<s:Scroller id="scrollArea" left="10" right="10" top="235" height="215">
		<s:VGroup id="scrollGroup" width="100%" gap="15" paddingBottom="20">
			<s:TextArea skinClass="com.sunlightfoundation.decipherdc.view.skins.TextBoxSkin" id="dialogue" width="100%" text="{data.dialogue}" />
			<s:Button id="characterAction" label="{data.actionText}"/>
		</s:VGroup>
	</s:Scroller>
</components:ChromelessView>
